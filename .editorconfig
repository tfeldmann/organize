# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

[{*.bat,Makefile}]
indent_style = tab

[*.rst]
indent_size = 2

[{*.yml,*.yaml}]
indent_size = 2

[*.md]
indent_size = 2
indent_style = space
